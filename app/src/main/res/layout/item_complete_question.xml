<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/response_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답변내용"
        android:textColor="@color/black"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/response_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매자"
        android:textColor="@color/black"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/response_question"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/response_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="문의날짜"
        app:layout_constraintStart_toEndOf="@+id/response_company"
        app:layout_constraintTop_toBottomOf="@+id/response_question"/>

    <TextView
        android:id="@+id/question_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="수정"
        app:layout_constraintStart_toEndOf="@+id/response_date"
        app:layout_constraintTop_toBottomOf="@+id/response_question"/>

    <TextView
        android:id="@+id/question_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="삭제"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/question_gray"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/response_company" />



</androidx.constraintlayout.widget.ConstraintLayout>